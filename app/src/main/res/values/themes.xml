<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="colorSurface">@color/azureish_white</item>
    </style>

    <style name="Theme.EnWordDetailTopNav" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Theme.TkBottomNavigation" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#00BCD4</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Theme.TkActionBar" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#00BCD4</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.HideShadowActionbar" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.SplashActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/cultured</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:windowBackground">@drawable/background_splash</item>

        <item name="android:textColorPrimary">@color/cultured</item>
        <item name="colorPrimary">@color/space_cadet</item>
        <item name="colorPrimaryDark">@color/space_cadet</item>
    </style>

    <style name="Theme.Main" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/space_cadet</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:textColorPrimary">@color/cultured</item>
        <item name="colorPrimary">@color/space_cadet</item>
        <item name="colorPrimaryDark">@color/space_cadet</item>
    </style>

    <style name="Theme.EnWordDetailActivity2" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColor">@color/space_cadet</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:textColorPrimary">@color/cultured</item>
        <item name="colorPrimary">@color/steel_blue</item>
        <item name="colorPrimaryDark">@color/steel_blue</item>
        <item name="tabStyle">@style/Widget.App.TabLayout</item>
    </style>

    <style name="Theme.SettingsActivity" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColor">@color/space_cadet</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:textColorPrimary">@color/space_cadet</item>
        <item name="colorPrimary">@color/space_cadet</item>
        <item name="colorPrimaryDark">@color/space_cadet</item>

        <item name="colorOnPrimary">@color/cultured</item>
        <item name="colorOnSurface">@color/space_cadet</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorSurface">@color/azureish_white</item>
        <item name="colorOnSurface">@color/steel_blue</item>
        <item name="colorSecondary">@color/space_cadet</item>
    </style>

    <style name="Theme.TranslateTextActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/space_cadet</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:textColorPrimary">@color/cultured</item>
        <item name="colorPrimary">@color/space_cadet</item>
        <item name="colorPrimaryDark">@color/space_cadet</item>
    </style>

    <style name="Theme.CropActivity" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColor">@color/space_cadet</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:textColorPrimary">@color/cultured</item>
        <item name="colorPrimary">@color/space_cadet</item>
        <item name="colorPrimaryDark">@color/space_cadet</item>
    </style>

    <style name="Theme.TranslationHistoryActivity" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/space_cadet</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:textColorPrimary">@color/space_cadet</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/space_cadet</item>
    </style>

    <style name="MyTheme.ActionBarWidget" parent="android:Theme.Holo.Light">
        <item name="android:popupMenuStyle">@android:style/Widget.Holo.Light.PopupMenu</item>
        <item name="android:dropDownListViewStyle">
            @android:style/Widget.Holo.Light.ListView.DropDown
        </item>
    </style>


    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>