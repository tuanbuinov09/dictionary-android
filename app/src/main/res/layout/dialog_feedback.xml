<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/bg_steel_blue_top_radius_25"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Feedback"
        android:textColor="@color/cultured"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/textEditEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_regular"
        android:text=""
        android:paddingStart="22dp"
        android:maxLines="1"
        android:hint="Nhập email..."
        android:background="@color/white"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/textEditContent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:maxLines="1"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"

        android:fontFamily="@font/roboto_regular"
        android:text=""
        android:paddingStart="22dp"
        android:hint="Nhập feedback..."
        android:background="@color/white"
        android:textSize="16sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_alert_radius_15"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="Hủy"
        android:textColor="@color/white"
        android:textSize="18sp" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btnOK"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_azureich_white_radius_15"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="Gửi"
        android:textColor="@color/steel_blue"
        android:textSize="18sp" />
</LinearLayout>


</LinearLayout>