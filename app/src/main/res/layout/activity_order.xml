<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".dictionary.OrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:paddingStart="5dp">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/dictionary_black" />

        <LinearLayout
            android:id="@+id/layoutClickToSeeDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@drawable/border_bottom"
                android:fontFamily="@font/roboto_bold"
                android:text="Từ điển"
                android:textColor="@color/space_cadet"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="100.000đ"
                android:textColor="@color/steel_blue"
                android:textSize="14sp" />

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content">-->

            <!--                <TextView-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_marginBottom="4dp"-->
            <!--                    android:text="Còn lại: "-->
            <!--                    android:textColor="#333"-->
            <!--                    android:textSize="14sp" />-->

            <!--                <TextView-->
            <!--                    android:id="@+id/textViewQuantity"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_marginBottom="4dp"-->
            <!--                    android:text="10"-->
            <!--                    android:textColor="@color/steel_blue"-->
            <!--                    android:textSize="14sp" />-->
            <!--            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng: "
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editTextAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="55dp"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:text="200"
                    android:textColor="@color/steel_blue"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành tiền: "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:inputType="number"
                    android:text="200 đ"
                    android:textColor="@color/steel_blue"
                    android:layout_marginRight="12dp"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingVertical="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Tên người nhận"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextShipName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/space_cadet"
            android:textColorHint="@color/steel_blue"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:text="Số điện thoại"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextShipPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/space_cadet"
            android:textColorHint="@color/steel_blue"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewShipAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:text="Địa chỉ"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextShipAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/space_cadet"
            android:textColorHint="@color/steel_blue"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:text="Ghi chú"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextShipNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:inputType="text"
            android:textColor="@color/space_cadet"
            android:textColorHint="@color/steel_blue"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="16sp" />
        <Button
            android:id="@+id/buttonDatHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:paddingHorizontal="20dp"
            android:text="Đặt hàng"
            android:background="@color/space_cadet"
            android:textColor="@color/white"
            android:layout_gravity="right"/>
    </LinearLayout>
</LinearLayout>