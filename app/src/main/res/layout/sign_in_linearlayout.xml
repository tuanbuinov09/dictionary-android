<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_launcher"
            android:background="@color/ic_launcher_background"
            android:layout_marginRight="4dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="70dp"
            android:background="@color/ic_launcher_background"
            android:gravity="center_horizontal|center_vertical"
            android:text="ĐĂNG NHẬP"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên đăng nhập"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/space_cadet"
        android:textColorHint="@color/steel_blue"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"

        android:inputType="text"
        />

<!--    <EditText-->
<!--        android:id="@+id/editTextPassword"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginHorizontal="20dp"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:inputType="textPassword"-->
<!--        android:maxLines="1"-->
<!--        android:textColor="#333"-->
<!--        android:textSize="20dp" />-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="@color/space_cadet"
        app:passwordToggleEnabled="true"
        tools:ignore="MissingContraints">

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_visibility"
            android:drawablePadding="16dp"
            android:drawableTint="@color/space_cadet"
            android:inputType="textPassword"
            android:textColor="@color/space_cadet"
            android:textColorHint="@color/steel_blue"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="16sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
        />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/labelError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Báo lỗi"
        android:textColor="#EDFF4E45"
        android:textAlignment="textEnd"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignIn"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btngradient"
        android:gravity="center"
        android:onClick="handleSignInClick"
        android:text="Đăng nhập"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="text"
                android:text="Chưa có tài khoản?"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewSignUp"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_marginLeft="18dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:onClick="goToSignUp"
                android:text="Đăng ký"
                android:textColor="#14608F"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>