<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="15dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/tvemailrank"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tvhotenrank"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="5dp"

            android:layout_marginBottom="3dp"

            android:text="gmail"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvhotenrank"
            android:layout_width="200dp"
            android:layout_height="30dp"

            android:layout_marginLeft="130dp"
            android:layout_marginTop="30dp"
            android:text="Name"
            android:textSize="20sp"

            />

        <TextView
            android:id="@+id/tvpointrank"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_marginTop="27dp"

            android:layout_marginEnd="9dp"

            android:layout_marginBottom="31dp"
            android:gravity="center"
            android:text="10"
            android:textSize="15sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagerank"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="262dp"

            android:src="@drawable/ic_avatar_default" />

        <TextView
            android:id="@+id/tvRank"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="270dp"
            android:layout_marginBottom="36dp"
            android:layout_toStartOf="@+id/tvpointrank"
            android:text="15"
            android:textSize="25sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>