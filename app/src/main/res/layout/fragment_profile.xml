                android:layout_below="@id/textViewTen"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_avatar"
                android:includeFontPadding="false"
                android:text=""
                android:textSize="20sp" />

        </RelativeLayout>

