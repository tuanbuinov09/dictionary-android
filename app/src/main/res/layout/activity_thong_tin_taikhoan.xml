<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.MyApp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThongTinTaikhoanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/space_cadet"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_avatar_default">

            </de.hdodenhof.circleimageview.CircleImageView>

            <!--            <TextView-->
            <!--                android:id="@+id/textViewTen"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="20dp"-->
            <!--                android:layout_marginStart="10dp"-->
            <!--                android:layout_marginTop="20dp"-->
            <!--                android:includeFontPadding="false"-->
            <!--                android:text="TruongCoder"-->
            <!--                android:textColor="@color/cultured"-->
            <!--                android:textSize="20sp"-->
            <!--                android:textStyle="bold" />-->

            <!--            <TextView-->
            <!--                android:id="@+id/tVusername"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginStart="10dp"-->
            <!--                android:layout_marginTop="10dp"-->
            <!--                android:ellipsize="end"-->
            <!--                android:includeFontPadding="false"-->
            <!--                android:maxLines="1"-->
            <!--                android:scrollHorizontally="true"-->
            <!--                android:text="nguyenquangtruonghktcute@gmail.com"-->
            <!--                android:textColor="@color/cultured"-->
            <!--                android:textSize="20sp" />-->
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Họ Tên"
                app:hintTextColor="@color/space_cadet">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textIntEdtHoten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_azureich_white_radius_15"
                    android:drawableStart="@drawable/ic_person"
                    android:drawableLeft="@drawable/ic_person"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/space_cadet"
                    android:hint="Họ Tên"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textColor="@color/space_cadet"
                    android:textColorHint="@color/steel_blue"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Email"
                app:hintTextColor="@color/space_cadet">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textIntEdtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_azureich_white_radius_15"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/space_cadet"
                    android:hint="Email"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textColor="@color/space_cadet"
                    android:textColorHint="@color/steel_blue"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Số điện thoại"
                app:hintTextColor="@color/space_cadet">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textIntEdtSdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_azureich_white_radius_15"
                    android:drawableStart="@drawable/ic_baseline_phone_24"
                    android:drawableLeft="@drawable/ic_baseline_phone_24"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/space_cadet"
                    android:hint="Số điện thoại"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textColor="@color/space_cadet"
                    android:textColorHint="@color/steel_blue"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:hint="UID"
                app:hintTextColor="@color/space_cadet"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textIntEdtUID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_azureich_white_radius_15"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/space_cadet"
                    android:hint="UID"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textColor="@color/space_cadet"
                    android:textColorHint="@color/steel_blue"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonCapNhat"
                    style="@style/buttonInAccountActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="Cập nhật"
                    android:textColor="@color/cultured"
                    app:backgroundTint="@color/space_cadet" />

                <Button
                    android:id="@+id/buttonChangePassword"
                    style="@style/buttonInAccountActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/azureish_white"
                    android:text="Đổi mật khẩu"
                    android:textColor="@color/steel_blue" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonLogout"
                style="@style/buttonInAccountActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:text="Đăng xuất"
                android:textColor="@color/space_cadet" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/btnSynchFromFirebase"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_azureich_white_radius_15"
                    android:backgroundTint="@color/space_cadet"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_baseline_cloud_download_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PHỤC HỒI"
                        android:textColor="@color/cultured" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnSynchToFirebase"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_azureich_white_radius_15"
                    android:backgroundTint="@color/steel_blue"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_baseline_cloud_upload_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sao lưu"
                        android:textAllCaps="true"
                        android:textColor="@color/cultured" />
                </LinearLayout>

                <Button
                    style="@style/buttonInAccountActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="Phục hồi"
                    android:visibility="gone" />

                <Button
                    style="@style/buttonInAccountActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sao lưu"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>