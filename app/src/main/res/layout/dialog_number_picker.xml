<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/cultured"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Choose the number of remind a day"
        android:textSize="16sp" />

    <!--        <NumberPicker-->
    <!--            android:id="@+id/number_picker"-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:divider="@color/azureish_white"-->
    <!--            />-->

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:np_dividerColor="@color/steel_blue"
        app:np_formatter="@string/number_picker_formatter"
        app:np_max="100"
        app:np_min="1"
        app:np_orientation="horizontal"
        app:np_selectedTextColor="@color/space_cadet"
        app:np_selectedTextSize="16sp"
        app:np_textColor="@color/colorPrimary"
        app:np_textSize="14sp"
        app:np_typeface="@string/roboto_light"
        app:np_value="1" />

    <Button
        android:id="@+id/btnOK"
        style="@style/borderlessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="OK"
        android:textColor="@color/space_cadet"
        android:textSize="14sp" />
</LinearLayout>