<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bright_gray"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".dictionary.YourWordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/steel_blue"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="TỪ CỦA BẠN"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold" />

        <!--        <ImageButton-->
        <!--            android:id="@+id/btnSynchronize"-->
        <!--            android:layout_width="40dp"-->
        <!--            android:layout_height="40dp"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:background="@drawable/icons8_synchronize_32px_1" />-->

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/icons8_back_32px"
            android:onClick="backToMain" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bright_gray"
        android:orientation="vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_corner_5"
            android:backgroundTint="@color/white"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="-10dp"
            android:textColor="@color/space_cadet"
            android:textSize="14sp"
            app:defaultQueryHint="@string/query_hint"
            app:iconifiedByDefault="false"
            app:queryBackground="@null"
            app:queryHint="@string/query_hint"
            app:searchIcon="@drawable/ic_round_search_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_round_corner_5"
            android:backgroundTint="@color/bright_gray"
            android:orientation="vertical">

            <include
                layout="@layout/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <include layout="@layout/progress_bar" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>