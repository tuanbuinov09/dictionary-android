<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:clipToPadding="false"
    tools:context=".learnenglish.fragment.home.activity.listening.ListeningActivity">
    <include layout="@layout/tk_arrange_words_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập lại nội dung bạn vừa nghe"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/imageButtonSpeaker"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/speaker_pressed_128"
        android:layout_gravity="center"/>
    
    <EditText
        android:id="@+id/etYourAnswer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:gravity="top"
        android:textSize="20sp"
        android:background="@drawable/tk_answer_content"
        android:hint="Nhập bằng tiếng anh"/>

    <Button
        android:id="@+id/btnCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Kiểm tra"
        android:textColor="@color/white"
        android:backgroundTint="#009688"
        android:textStyle="bold"
        android:textSize="20dp"/>
</LinearLayout>